<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/MyText"
            app:layout_constraintHorizontal_bias="0.476" app:layout_constraintVertical_bias="0.918"/>
    <com.example.myapplication5.MyImageView
            android:layout_width="390dp"
            android:layout_height="634dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/myImageView"
            android:contentDescription="A 3D Cube"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.chip.Chip
            android:layout_width="94dp"
            android:layout_height="43dp" android:id="@+id/chipMove"
            android:text='Move Cube' app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:checkable="true" android:layout_marginStart="16dp"/>
    <com.google.android.material.chip.Chip
            android:layout_width="65dp"
            android:layout_height="42dp" android:id="@+id/chipRotate"
            android:text="Rotate"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/chipMove"
            android:checkable="true" android:layout_marginStart="48dp"
            app:layout_constraintEnd_toStartOf="@+id/chipMoveSide"/>
    <com.google.android.material.chip.Chip
            android:layout_width="95dp"
            android:layout_height="44dp" android:id="@+id/chipMoveSide"
            android:text="Move Face"
            android:checkable="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>