<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <com.example.myapplication5.MyImageView
            android:layout_width="390dp"
            android:layout_height="634dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/myImageView"
            android:contentDescription="A 3D Cube"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chipRotate"/>
    <com.google.android.material.chip.Chip
            android:layout_width="134dp"
            android:layout_height="50dp" android:id="@+id/chipMove"
            android:text='Würfel verschieben'
            android:checkable="true"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"/>
    <com.google.android.material.chip.Chip
            android:layout_width="94dp"
            android:layout_height="48dp" android:id="@+id/chipRotate"
            android:text="Rotieren"
            android:checkable="true"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/chipMove"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.422"/>
    <com.google.android.material.chip.Chip
            android:layout_width="181dp"
            android:layout_height="50dp" android:id="@+id/chipMoveSide"
            android:text="Seitenflächen verschieben"
            android:checkable="true"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>